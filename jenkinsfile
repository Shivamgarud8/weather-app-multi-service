pipeline {
    agent any

    environment {
        ANSIBLE_SERVER = "ec2-user@13.50.16.229"  // Ansible server SSH
        APP_DIR = "/home/ubuntu/flask-weather-app"
        TARGET_IP = "13.49.49.25"                  // Target server
        PORT = "5000"
        INVENTORY = "/etc/ansible/playbooks/inventory.ini"
        PLAYBOOK = "/etc/ansible/playbooks/flask.yml"
        CREDENTIAL_ID = "jenkins-weather"           // Jenkins SSH credential
    }

    stages {
        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: [CREDENTIAL_ID]) {
                    echo "üì¶ Running Ansible playbook on Ansible server..."
                    sh """
                    ssh -o StrictHostKeyChecking=no ${ANSIBLE_SERVER} '
                        export ANSIBLE_HOST_KEY_CHECKING=False
                        ansible-playbook -i ${INVENTORY} ${PLAYBOOK}
                    '
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                echo "ü©∫ Checking Flask app status on target server..."
                script {
                    def result = sh(
                        script: "curl -s -o /dev/null -w '%{http_code}' http://${TARGET_IP}:${PORT}/",
                        returnStdout: true
                    ).trim()
                    if (result != '200') {
                        error("‚ùå Health check failed! Flask app not reachable.")
                    } else {
                        echo "‚úÖ Flask app is running on port ${PORT}."
                    }
                }
            }
        }
    }

    post {
        success {
            echo "üéâ Deployment successful! Visit: http://${TARGET_IP}:${PORT}/"
        }
        failure {
            echo "‚ùå Deployment failed! Check Jenkins logs for details."
        }
    }
}
